<h1>Editing Book</h1>

<form>
  <%= form_with model:@book, local: true do |f| %>

  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.label :body %><br>
  <%= f.text_area :body %><br>

  <%= f.submit 'Update' %>
  <% end %>
</form>

<%= link_to 'Show', @book, class: "show_#{@book.id}" %> |
<%= link_to 'Back', books_path, class: "back" %>
